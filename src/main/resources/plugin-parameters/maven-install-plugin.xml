<plugin xmlns="http://maven.apache.org/PLUGIN-PARAMETERS/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/PLUGIN-PARAMETERS/1.0.0 plugin-parameters.xsd">
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-install-plugin</artifactId>
  <minVersion>3.1.1</minVersion>

  <goals>
    <goal>
      <name>install</name>
      <parameters>
        <!-- FUNCTIONAL: Affect what gets installed -->
        <parameter>
          <name>file</name>
          <type>functional</type>
          <description>The file to install</description>
        </parameter>
        <parameter>
          <name>groupId</name>
          <type>functional</type>
          <description>GroupId of the artifact</description>
        </parameter>
        <parameter>
          <name>artifactId</name>
          <type>functional</type>
          <description>ArtifactId of the artifact</description>
        </parameter>
        <parameter>
          <name>version</name>
          <type>functional</type>
          <description>Version of the artifact</description>
        </parameter>
        <parameter>
          <name>packaging</name>
          <type>functional</type>
          <description>Packaging type of the artifact</description>
        </parameter>
        <parameter>
          <name>classifier</name>
          <type>functional</type>
          <description>Classifier of the artifact</description>
        </parameter>
        <parameter>
          <name>pomFile</name>
          <type>functional</type>
          <description>POM file to install alongside the artifact</description>
        </parameter>
        <parameter>
          <name>generatePom</name>
          <type>functional</type>
          <description>Generate a minimal POM if none provided</description>
        </parameter>
        <parameter>
          <name>createChecksum</name>
          <type>functional</type>
          <description>Create MD5 and SHA1 checksums</description>
        </parameter>

        <!-- BEHAVIORAL: Affect how installation happens -->
        <parameter>
          <name>skip</name>
          <type>behavioral</type>
          <description>Skip installation</description>
        </parameter>
        <parameter>
          <name>installAtEnd</name>
          <type>behavioral</type>
          <description>Install artifacts at end of multi-module build</description>
        </parameter>
        <parameter>
          <name>updateReleaseInfo</name>
          <type>behavioral</type>
          <description>Update maven-metadata.xml with release info</description>
        </parameter>
      </parameters>
    </goal>

    <goal>
      <name>install-file</name>
      <parameters>
        <!-- Same parameters as install goal -->
        <parameter>
          <name>file</name>
          <type>functional</type>
          <description>The file to install</description>
        </parameter>
        <parameter>
          <name>groupId</name>
          <type>functional</type>
          <description>GroupId of the artifact</description>
        </parameter>
        <parameter>
          <name>artifactId</name>
          <type>functional</type>
          <description>ArtifactId of the artifact</description>
        </parameter>
        <parameter>
          <name>version</name>
          <type>functional</type>
          <description>Version of the artifact</description>
        </parameter>
        <parameter>
          <name>packaging</name>
          <type>functional</type>
          <description>Packaging type of the artifact</description>
        </parameter>
        <parameter>
          <name>classifier</name>
          <type>functional</type>
          <description>Classifier of the artifact</description>
        </parameter>
        <parameter>
          <name>pomFile</name>
          <type>functional</type>
          <description>POM file to install</description>
        </parameter>
        <parameter>
          <name>generatePom</name>
          <type>functional</type>
          <description>Generate a minimal POM</description>
        </parameter>
        <parameter>
          <name>createChecksum</name>
          <type>functional</type>
          <description>Create checksums</description>
        </parameter>
        <parameter>
          <name>skip</name>
          <type>behavioral</type>
          <description>Skip file installation</description>
        </parameter>
      </parameters>
    </goal>
  </goals>
</plugin>
